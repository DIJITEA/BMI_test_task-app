{
  "env": {
    "browser": false,
    "es6": true,
    "es2020": true,
    "node": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": "tsconfig.json",
    "tsconfigRootDir": "."
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-undef": "off",
    "react/prop-types": "off",
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "camelcase": "off",
    "max-len": [
      "error",
      {
        "code": 160,
        "ignoreComments": false,
        "ignoreTrailingComments": false,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }]
  }
}
